<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="right" >

    <TextView
        android:id="@+id/float_tv3"
        style="@style/text_float_button"
        android:layout_width="65dip"
        android:layout_height="match_parent"
        android:background="@drawable/gasdk_floatlist_button1_1"
        android:gravity="center_horizontal|bottom"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="@string/float_button_3" />
    
        <TextView
        android:id="@+id/float_tv4"
        style="@style/text_float_button"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:background="@drawable/gasdk_floatlist_button_1"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="@string/float_button_4" />

    <TextView
        android:id="@+id/float_tv2"
        style="@style/text_float_button"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:background="@drawable/gasdk_floatlist_button_1"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="@string/float_button_2" />

    <TextView
        android:id="@+id/float_tv1"
        style="@style/text_float_button"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:background="@drawable/gasdk_floatlist_button_1"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="@string/float_button_1" />

    <ImageView
        android:id="@+id/float_img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:paddingLeft="2dip"
        android:src="@drawable/gasdk_float_1" />

</LinearLayout>